<!DOCTYPE html>
<html>
  <head>
    <title>eGift CMS</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
    <%= javascript_include_tag "application", "data-turbo-track": "reload", type: "module" %>
    
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  </head>

  <body>
    <div class="d-flex min-vh-100">

      <%= render 'layouts/admins/sidebar' %>
      
      <div class="flex-fill bg-light overflow-auto">
        <div class="container mt-4">
          <% if content_for?(:page_title) %>
            <h1><%= yield(:page_title) %></h1>
            <div class="d-flex justify-content-end align-items-center mb-3">
              <%= yield(:page_actions) if content_for?(:page_actions) %>
            </div>
          <% end %>
          
          <% flash.each do |key, message| %>
            <% alert_class = case key.to_sym
              when :notice then "success"
              when :alert  then "danger"
              else "info"
            end %>
            <div class="alert alert-<%= alert_class %> alert-dismissible fade show m-3" role="alert">
              <%= message %>
              <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
          <% end %>
          
          <%= yield %>
        </div>
      </div>
    </div>
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html> 
