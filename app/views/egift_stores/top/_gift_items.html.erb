<section class="ab-flex ab-flex-column ab-mb-16">
  <h2 class="ab-text-headline-l ab-font-bold ab-mb-8 ab-flex ab-flex-justify-center">贈れるギフト</h2>

  <div class="ab-flex ab-flex-row ab-gap-4">
    <% @items.each do |item| %>
      <section class="ab-bg-rest-primary ab-rounded-md ab-border ab-p-4 ab-w-144">
        <%= link_to new_egift_stores_order_path(item_id: item.id), class: "ab-LinkText ab-LinkText-quiet" do %>
          <div class="ab-flex ab-flex-column">
            <div>
              <% if item.image.attached? %>
                <%= image_tag item.image, alt: item.name, class: "ab-w-128 ab-h-128" %>
              <% else %>
                <span class="ab-text-body-m">画像なし</span>
              <% end %>
            </div>
            <h2 class="ab-text-headline-m ab-wb-break-all ab-mt-4"><%= item.name %></h2>
            <% if item.description.present? %>
              <span class="ab-text-body-m ab-wb-break-all"><%= item.description %></span>
            <% end %>
            <span class="ab-text-body-m ab-font-bold"><%= number_with_delimiter(item.price) %>円</span>
          </div>
        <% end %>
      </section>
    <% end %>
  </div>
</section> 
