<section class="py-5 bg-light">
  <div class="container">
    <h2 class="text-center mb-5">贈れるギフト</h2>
    <div class="row g-4">
      <% @items.each do |item| %>
        <div class="col-md-6 col-lg-3">
          <%= link_to new_egift_order_path(item_id: item.id), class: "text-decoration-none" do %>
            <div class="card h-80 shadow-sm">
              <div class="ratio ratio-1x1">
                <% if item.image.attached? %>
                  <%= image_tag item.image, alt: item.name, class: "img-fluid w-80 h-80 object-fit-cover rounded-top" %>
                <% else %>
                  <div class="d-flex align-items-center justify-content-center bg-light w-80 h-80 rounded-top">
                    <span class="text-muted">画像なし</span>
                  </div>
                <% end %>
              </div>
              <div class="card-body">
                <h3 class="card-title h5"><%= item.name %></h3>
                <% if item.description.present? %>
                  <p class="card-text text-muted"><%= item.description %></p>
                <% end %>
                <p class="card-text text-primary fw-bold"><%= number_with_delimiter(item.price) %>円</p>
              </div>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</section> 
