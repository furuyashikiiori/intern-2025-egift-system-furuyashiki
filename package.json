{
  "name": "app",
  "private": true,
  "devDependencies": {
    "esbuild": "^0.25.5"
  },
  "scripts": {
    "build": "esbuild app/javascript/**/*.* --bundle --sourcemap --format=esm --outbase=app/javascript --outdir=app/assets/builds --public-path=/assets --loader:.css=css",
    "build:watch": "esbuild app/javascript/**/*.* --bundle --sourcemap --format=esm --outbase=app/javascript --outdir=app/assets/builds --public-path=/assets --loader:.css=css --watch=forever"
  },
  "dependencies": {
    "@giftee/abukuma-css": "^3.1.1",
    "@hotwired/turbo-rails": "^8.0.16",
    "@popperjs/core": "^2.11.8",
    "bootstrap": "^5.3.3"
  }
}
